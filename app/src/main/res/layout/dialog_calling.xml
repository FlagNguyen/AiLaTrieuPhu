<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/frame"
    android:padding="5dp"
    tools:context=".function.helper.CallingDialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin hãy chọn 1 người để gọi?"
        android:textAlignment="center"
        android:textColor="#383838"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="19dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="70dp"/>

    <ImageButton
        android:id="@+id/call1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/call_man_1"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/call2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/call_man_2"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/call3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/call_man_3"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/call4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/call_man_4"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/call_full"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/call_man_1"
        android:layout_marginTop="100dp"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#383838"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:id="@+id/tv"
        android:visibility="invisible"/>

</FrameLayout>