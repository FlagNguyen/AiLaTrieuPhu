<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="350dp"
    android:layout_height="700dp"
    android:layout_gravity="center"
    android:background="@drawable/border_grey"
    tools:context=".function.helper.AskingDialog">

    <RelativeLayout
        android:id="@+id/columnA"
        android:layout_width="35dp"
        android:layout_height="500px"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="100dp"
        android:background="#ffff24"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/columnB"
        android:layout_width="35dp"
        android:layout_height="500px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="100dp"
        android:layout_toRightOf="@id/columnA"
        android:background="#ffff24"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/columnD"
        android:layout_width="35dp"
        android:layout_height="500px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:background="#ffff24"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/columnC"
        android:layout_width="35dp"
        android:layout_height="500px"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="100dp"
        android:layout_toLeftOf="@id/columnD"
        android:background="#ffff24"
        android:orientation="vertical" />


    <TextView
        android:id="@+id/tvPercentA"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="100%"
        android:textColor="#fff"
        android:textSize="13dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvPercentB"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="100%"
        android:textColor="#fff"
        android:textSize="13dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvPercentC"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:text="100%"
        android:textColor="#fff"
        android:textSize="13dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvPercentD"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:text="100%"
        android:textColor="#fff"
        android:textSize="13dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="A"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="B"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="C"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="D"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

</RelativeLayout>